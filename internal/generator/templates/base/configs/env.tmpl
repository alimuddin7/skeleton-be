SERVICE_NAME={{.ProjectName}}
SERVICE_CODE={{.ServiceCode}}
LOG_NAME=./logs/{{.ProjectName}}.log
LOG_LEVEL=debug

ROUTER_PORT=7878
PATH_MAIN=/{{.ProjectName}}
SECRET_KEY=secretkey

{{- range .Modules}}
{{- if eq . "postgresql"}}
# POSTGRES
POSTGRE_HOST=localhost
POSTGRE_PORT=5432
POSTGRE_USER=postgres
POSTGRE_PASS=password
POSTGRE_DB=db_name
POSTGRE_SSL=disable
{{- end}}
{{- if eq . "mysql"}}
# MYSQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASS=password
MYSQL_DB=db_name
{{- end}}
{{- if eq . "redis"}}
# REDIS
REDIS_ADDRESS=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB_TYPE=0
{{- end}}
{{- if eq . "kafka"}}
# KAFKA
KAFKA_ADDRESS=localhost:9092
KAFKA_GROUP_ID=my-group
{{- end}}
{{- if eq . "nats"}}
# NATS
NATS_SERVERS=nats://localhost:4222
NATS_USERNAME=
NATS_PASSWORD=
{{- end}}
{{- if eq . "minio"}}
# MINIO
MINIO_ENDPOINT=localhost:9000
MINIO_KEY_ID=minioadmin
MINIO_SECRET=minioadmin
{{- end}}
{{- if eq . "redis-cluster"}}
# REDIS CLUSTER
REDIS_CLUSTER_ADDRESS=localhost:7000,localhost:7001,localhost:7002
REDIS_CLUSTER_SLAVE_ADDRESS=localhost:7003,localhost:7004,localhost:7005
{{- end}}
{{- end}}

{{- if has .ProjectTypes "Scheduler"}}
# SCHEDULER
SCHEDULER_TASK_TIME="0 0 * * * *"
{{- end}}

{{- if or (has .Modules "grpc-server") (has .Modules "grpc-client")}}
# GRPC
GRPC_SERVER_PORT=50051
GRPC_CLIENT_ADDRESS=localhost:50051
{{- end}}

# Hosts
{{- range .Hosts}}
HOSTS_{{. | title | upper}}_HOST=http://localhost:8080
HOSTS_{{. | title | upper}}_GET=/api/v1/resource
HOSTS_{{. | title | upper}}_POST=/api/v1/resource
{{- end}}
