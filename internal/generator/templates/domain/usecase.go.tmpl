	}
	nextPage := page + 1
	if nextPage > totalPages {
		nextPage = 0
	}

	var listData []dto.{{.FeatureName}}Response
	for _, v := range data {
		listData = append(listData, dto.{{.FeatureName}}Response{
			ID:   v.ID,
			Name: v.Name,
		})
	}

	return dto.Response{
		Data:  listData,
		Count: count,
		Page: &dto.Page{
			CurrentPage:  page,
			PreviousPage: prevPage,
			NextPage:     nextPage,
		},
	}, nil
}

